import requests

# API_URL = "https://example.com/api/questions"

def fetch_questions_from_api():
    """ Fetches questions (MCQ & Coding) from an external API """
    try:
        response = requests.get(API_URL)
        response.raise_for_status()  # Raise error for bad responses (4xx and 5xx)
        data = response.json()  # Convert response to JSON
        return data.get("questions", [])  # Assuming the API returns {"questions": [...]}
    except requests.RequestException as e:
        print(f"Error fetching questions: {e}")
        return []